
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="col-lg-12 mt-2">
    <%= f.email_field :email,autofocus: true, autocomplete: "email", placeholder: "Enter your e-mail", class: "form-control"%>
  </div>
  <div class="col-lg-12 mt-2">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Enter Password" , class: "form-control"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group form-check ml-4 mt-2">
        <%= f.check_box :remember_me, class:"form-check-input"%>
        <%= f.label :remember_me, class:"form-check-label"%>
    </div>
  <% end %>

  <div class="col-lg-12 ">
    <%= f.submit "Log in", class:"btn btn-primary"%>
  </div>
<% end %>